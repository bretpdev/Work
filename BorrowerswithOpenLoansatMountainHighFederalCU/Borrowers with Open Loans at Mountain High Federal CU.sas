/*DSASE09 - BORROWERS WITH OPEN LOANS AT MOUNTAIN HIGH FED CU*/

LIBNAME  WORKLOCL  REMOTE  SERVER=CYPRUS  SLIBREF=WORK;
RSUBMIT;
PROC SQL;
CONNECT TO DB2 (DATABASE=DLGSUTWH);
CREATE TABLE MHFCU AS
SELECT *
FROM CONNECTION TO DB2 (
SELECT 
		A.BF_SSN
		,RTRIM(B.DM_PRS_LST)||', '||RTRIM(B.DM_PRS_1)||RTRIM(' '||B.DM_PRS_MID) AS DM_PRS_NAME
		,A.LA_CUR_PRI
FROM	OLWHRM1.LN10_LON A INNER JOIN
		OLWHRM1.PD10_PRS_NME B ON
			A.BF_SSN = B.DF_PRS_ID
			AND A.LC_STA_LON10 = 'R'
			AND A.LA_CUR_PRI > 0
			AND A.LF_LON_CUR_OWN = '834122'
ORDER BY RTRIM(B.DM_PRS_LST)||', '||RTRIM(B.DM_PRS_1)||RTRIM(' '||B.DM_PRS_MID)
FOR READ ONLY WITH UR
);
DISCONNECT FROM DB2;
ENDRSUBMIT;

DATA MHFCU;
SET WORKLOCL.MHFCU;
RUN;

PROC EXPORT DATA= WORK.Mhfcu 
            OUTFILE= "T:\SAS\BRWS AT MHFCU.xls" 
            DBMS=EXCEL2000 REPLACE;
RUN;