/*Schools setup for ELM disbursements*/
%LET RPTLIB = T:\SAS;
FILENAME REPORT2 "&RPTLIB/Schools setup for ELM disbursements.R2.TXT";

LIBNAME  WORKLOCL  REMOTE  SERVER=CYPRUS  SLIBREF=WORK;
RSUBMIT;

PROC SQL;
CONNECT TO DB2 (DATABASE=DLGSUTWH);
CREATE TABLE SSFELM AS
SELECT *
FROM CONNECTION TO DB2 (
SELECT
	A.IF_DOE_SCL,
	B.IM_SCL_FUL,
	A.IC_LON_PGM,
	A.IC_DSB_MDM
FROM	OLWHRM1.SC26_DSB_SCH A
	INNER JOIN OLWHRM1.SC10_SCH_DMO B
		ON A.IF_DOE_SCL = B.IF_DOE_SCL
WHERE	A.IC_DSB_MDM = '7'
FOR READ ONLY WITH UR
);
DISCONNECT FROM DB2;

ENDRSUBMIT;

DATA SSFELM;
SET WORKLOCL.SSFELM;
RUN;

PROC PRINTTO PRINT=REPORT2 NEW;
RUN;
OPTIONS CENTER PAGENO=1 ORIENTATION=PORTRAIT ;
OPTIONS LS=96 PS=52;

PROC PRINT NOOBS SPLIT='/' DATA=SSFELM WIDTH=UNIFORM WIDTH=MIN;
VAR IF_DOE_SCL
	IM_SCL_FUL
	IC_LON_PGM
	IC_DSB_MDM;
LABEL	IF_DOE_SCL = 'SCHOOL CODE'
		IM_SCL_FUL = 'SCHOOL NAME'
		IC_LON_PGM = 'LOAN PROGRAM'
		IC_DSB_MDM = 'DISBURSEMENT MEDIUM';
TITLE	'COMPASS Schools Set Up for ELM Disbursements';
FOOTNOTE 	'JOB = Schools setup for ELM disbursements     REPORT = Schools setup for ELM disbursements.R2';
RUN;

PROC PRINTTO;
RUN;
