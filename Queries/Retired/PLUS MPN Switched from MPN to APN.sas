%LET RPTLIB = T:\SAS;
FILENAME REPORT2 "&RPTLIB/PLUSMPNSwitchedfromMPNtoAPN.R2.txt";
LIBNAME  WORKLOCL  REMOTE  SERVER=CYPRUS  SLIBREF=WORK;
RSUBMIT;
PROC SQL;
CONNECT TO DB2 (DATABASE=DLGSUTWH);
CREATE TABLE PM2A AS
SELECT *
FROM CONNECTION TO DB2 (
SELECT DISTINCT A.IF_IST
	,A.IM_IST_FUL
	,A.IC_PLS_FRM_OPT
FROM OLWHRM1.SC01_LGS_SCL_INF A
WHERE A.IC_PLS_FRM_OPT IN ('','3')
	AND A.IC_DOE_SCL_STA IN ('A','F','P','R')
ORDER BY A.IF_IST
FOR READ ONLY WITH UR
);
DISCONNECT FROM DB2;
ENDRSUBMIT;
DATA PM2A ;
	SET WORKLOCL.PM2A;
RUN;
PROC PRINTTO PRINT=REPORT2 NEW;
RUN;
OPTIONS ORIENTATION = PORTRAIT;
OPTIONS PS=52 LS=96 PAGENO=1 CENTER DATE;
TITLE 'SCHOOLS WITH INCORRECT PLUS FORM OPTION';
FOOTNOTE 'JOB = PLUS MPN Switched from MPN to APN	REPORT = R2';
PROC PRINT NOOBS SPLIT='/' DATA=PM2A WIDTH=UNIFORM WIDTH=MIN LABEL;
VAR IF_IST IM_IST_FUL IC_PLS_FRM_OPT;
LABEL IF_IST = 'SCHOOL/CODE'
	IM_IST_FUL = 'SCHOOL/NAME'
	IC_PLS_FRM_OPT = 'PLUS/FORM/OPTION';
RUN;
PROC PRINTTO;
RUN;
