/*	Printing the number of observations in a Proc Report.
	N is the counter and CSUM is the calculated variable that = N.
*/

PROC REPORT DATA=DEMO NOWD SPACING=1 HEADSKIP SPLIT='/' ;
COLUMN 	SSN LA_PRI N CSUM;

DEFINE SSN / FORMAT=SSN11. DISPLAY LEFT;
DEFINE LA_PRI / 'Outstanding/Principal' SUM FORMAT=COMMA14.2 ;
DEFINE N /  NOPRINT WIDTH=5;
DEFINE CSUM / NOPRINT COMPUTED WIDTH = 5;

RBREAK AFTER / SUMMARIZE SKIP DOL;

COMPUTE CSUM;
CSUM = N;
ENDCOMP;

COMPUTE AFTER;
LINE "TOTAL NUMBER OF LOANS:  "CSUM COMMA6.;
ENDCOMP;
RUN;
