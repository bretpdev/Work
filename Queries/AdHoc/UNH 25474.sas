/*%LET RPTLIB = %SYSGET(reportdir);*/
%LET RPTLIB = T:\SAS;
LIBNAME  DUSTER  REMOTE  SERVER=DUSTER  SLIBREF=WORK;
RSUBMIT;

PROC SQL;
	CONNECT TO DB2 (DATABASE=DLGSUTWH);

	CREATE TABLE DEMO AS
		SELECT 
			*
		FROM 
			CONNECTION TO DB2 
				(
					SELECT
						PD10.DF_SPE_ACC_ID AS AccountNumber,
						LN10.LN_SEQ AS LoanSequence,
						SUM(LN10.LA_CUR_PRI + DW01.LA_NSI_OTS) AS Balance,
						LN16.DaysDelinquent
					FROM
						OLWHRM1.PD10_PRS_NME PD10
						INNER JOIN OLWHRM1.LN10_LON LN10
							ON LN10.BF_SSN = PD10.DF_PRS_ID
						INNER JOIN OLWHRM1.DW01_DW_CLC_CLU DW01
							ON DW01.BF_SSN = LN10.BF_SSN
							AND DW01.LN_SEQ = LN10.LN_SEQ
						INNER JOIN ( 
								SELECT 
									MAX(LN16I.LN_DLQ_MAX) AS DaysDelinquent,
									LN16I.BF_SSN
								FROM 
									OLWHRM1.LN16_LON_DLQ_HST LN16I
								WHERE
									LN16I.LC_STA_LON16 = 1
								GROUP BY
									LN16I.BF_SSN
							) LN16
							ON LN16.BF_SSN = LN10.BF_SSN
					WHERE
						LN10.LA_CUR_PRI > 0
						AND LN10.LC_STA_LON10 = 'R'
					GROUP BY
						PD10.DF_SPE_ACC_ID,
						LN10.LN_SEQ,
						LN16.DaysDelinquent
					HAVING
						SUM(LN10.LA_CUR_PRI + DW01.LA_NSI_OTS) BETWEEN 20.00 AND 50.00

					FOR READ ONLY WITH UR
				)
	;

	DISCONNECT FROM DB2;

	/*%PUT  SQLXRC= >>> &SQLXRC <<< ||| SQLXMSG= >>> &SQLXMSG >>> ;  ** INCLUDES ERROR MESSAGES TO SAS LOG  ;*/
	/*%SQLCHECK;*/
QUIT;

ENDRSUBMIT;
DATA DEMO;
	SET DUSTER.DEMO;
	FORMAT BALANCE DOLLAR10.2;
RUN;

PROC EXPORT DATA = WORK.DEMO 
            OUTFILE = "T:\NH 25474.xlsx" 
            DBMS = "Excel" 
			REPLACE;
RUN;
