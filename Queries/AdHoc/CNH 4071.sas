LIBNAME PKUB DBX DATABASE=DNFPUTDL OWNER=PKUB;

PROC SQL;
	CREATE TABLE QBLDR AS
		SELECT
			P.DF_SPE_ACC_ID,
			CASE 
				WHEN B.CAMPAIGN = X THEN 'EDXXX'
				WHEN B.CAMPAIGN = X THEN 'EDXXX'
				WHEN B.CAMPAIGN = X THEN 'LRGED'
				WHEN B.CAMPAIGN = X THEN 'FINED'
				WHEN B.CAMPAIGN = X THEN 'GRCED'
				WHEN B.CAMPAIGN = X THEN 'EDXXX'
			END AS ARC
		FROM
			BRWS B
			JOIN PKUB.PDXX_PRS_NME P
				ON B.SSN = P.DF_PRS_ID
	;
QUIT;

ENDRSUBMIT;

DATA QBLDR; SET LEGEND.QBLDR; RUN;

