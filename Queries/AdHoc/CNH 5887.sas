RSUBMIT LEGEND;
/*%let DB = DNFPRQUT;  *This is test;*/
/*%let DB = DNFPRUUT;  *This is VUKX test;*/
%let DB = DNFPUTDL;  *This is live;

LIBNAME PKUB DBX DATABASE=&DB OWNER=PKUB;

PROC SQL ;
	CONNECT TO DBX (DATABASE=&DB);

	CREATE TABLE DEMO AS
		SELECT	
			S.*
			,CASE
				WHEN LNXX.BF_SSN IS NOT NULL AND RELEASED.BF_SSN IS NOT NULL THEN PDXX.DF_SPE_ACC_ID
				WHEN LNXX.BF_SSN IS NOT NULL AND DECON.BF_SSN IS NOT NULL THEN 'Deconverted'
				WHEN LNXX.BF_SSN IS NOT NULL AND RELEASED.BF_SSN IS NULL AND DECON.BF_SSN IS NULL THEN 'On System'
				ELSE 'No Match'
			END AS COMPASS_STATUS
		FROM	
			SOURCE S
			LEFT JOIN (
					SELECT DISTINCT
						LNXX.BF_SSN
					FROM PKUB.LNXX_LON LNXX
					WHERE LNXX.LC_STA_LONXX = 'R'
						) RELEASED
				ON S.SSN = RELEASED.BF_SSN
			LEFT JOIN (
					SELECT DISTINCT
						LNXX.BF_SSN
					FROM PKUB.LNXX_LON LNXX
						LEFT JOIN (
								SELECT DISTINCT
									LNXX.BF_SSN
								FROM PKUB.LNXX_LON LNXX
								WHERE LNXX.LC_STA_LONXX ^= 'D'
									) NODS
							ON LNXX.BF_SSN = NODS.BF_SSN
					WHERE LNXX.LC_STA_LONXX = 'D'
						AND NODS.BF_SSN IS NULL
						) DECON
				ON S.SSN = DECON.BF_SSN
			LEFT JOIN (
					SELECT DISTINCT 
						LNXX.BF_SSN
					FROM PKUB.LNXX_LON LNXX
						) LNXX
				ON S.SSN = LNXX.BF_SSN
			LEFT JOIN PKUB.PDXX_PRS_NME PDXX
				ON S.SSN = PDXX.DF_PRS_ID
	;

	DISCONNECT FROM DBX;

	/*%PUT  SQLXRC= >>> &SQLXRC <<< ||| SQLXMSG= >>> &SQLXMSG >>> ;  ** INCLUDES ERROR MESSAGES TO SAS LOG  ;*/
	/*%SQLCHECK;*/
QUIT;

ENDRSUBMIT;

