%let DB = DNFPUTDL;  *This is live;

LIBNAME PKUB DBX DATABASE=&DB OWNER=PKUB;

PROC SQL;
	CONNECT TO DBX (DATABASE=&DB);

	CREATE TABLE DEMO AS
		SELECT	
			*
		FROM	
			CONNECTION TO DBX 
				(
					SELECT DISTINCT
						LNXX.BF_SSN,
						LNXX.LN_SEQ,
						SUM(GRXX.LA_LON_AMT_GTR) AS GUAR_AMT,
						SUM(GRXX.LA_DSB) AS DISB,
						GRXX.WN_SEQ_GRXX

					FROM
						PKUB.PDXX_PRS_NME PDXX
						INNER JOIN PKUB.LNXX_LON LNXX
							ON PDXX.DF_PRS_ID = LNXX.BF_SSN
						INNER JOIN PKUB.GRXX_RPT_LON_APL GRXX
							ON GRXX.BF_SSN = LNXX.BF_SSN
							AND GRXX.LN_SEQ = LNXX.LN_SEQ
						INNER JOIN PKUB.GRXX_RPT_DSB GRXX
							ON GRXX.BF_SSN = LNXX.BF_SSN
							AND GRXX.LN_SEQ = LNXX.LN_SEQ
					WHERE 
						LNXX.LA_CUR_PRI > X
						AND LNXX.LC_STA_LONXX = 'R'
					GROUP BY 
						LNXX.BF_SSN,
						LNXX.LN_SEQ,
						WN_SEQ_GRXX
					

					FOR READ ONLY WITH UR
				)
	;

	DISCONNECT FROM DBX;

QUIT;

ENDRSUBMIT;

DATA demo;
SET LEGEND.DEMO;
RUN;

LIBNAME  LEGEND  REMOTE  SERVER=LEGEND SLIBREF=WORK;
DATA LEGEND.SOURCE; *Send data to LEGEND;
SET DEMO;
RUN;

RSUBMIT LEGEND;
LIBNAME PKUB DBX DATABASE=DNFPUTDL OWNER=PKUB;
PROC SQL;
	CREATE TABLE FINAL AS
		SELECT	
			S.BF_SSN,
			DM_PRS_X || ' ' || DM_PRS_MID || ' ' || DM_PRS_LST AS NAME,
			S.LN_SEQ,
			S.GUAR_AMT,
			S.DISB,
			S.WN_SEQ_GRXX
			
		FROM
			 SOURCE S
		INNER JOIN PKUB.PDXX_PRS_NME PDXX
			ON PDXX.DF_PRS_ID = S.BF_SSN

;
QUIT;
ENDRSUBMIT;



DATA DISBG;
SET LEGEND.FINAL;
WHERE DISB > GUAR_AMT;
RUN;

DATA DISBL;
SET LEGEND.FINAL;
WHERE DISB < GUAR_AMT;
RUN;


