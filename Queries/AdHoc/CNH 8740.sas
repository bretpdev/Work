%let DB = DNFPUTDL;  *This is live;

LIBNAME PKUB DBX DATABASE=&DB OWNER=PKUB;

PROC SQL;
	CONNECT TO DBX (DATABASE=&DB);

	CREATE TABLE CURRENT AS
		SELECT	
			*
		FROM	
			CONNECTION TO DBX 
				(
					SELECT DISTINCT
						*
					FROM
						PKUB.DFXX_BR_DFR_REQ
					WHERE
						LC_DFR_TYP = 'XX'
						AND DAYS(LD_DFR_REQ_END) > DAYS(CURRENT_DATE)
						AND LC_DFR_STA = 'A'
						AND LC_STA_DFRXX = 'A'

					FOR READ ONLY WITH UR
				)
	;

	CREATE TABLE PAST AS
		SELECT	
			*
		FROM	
			CONNECTION TO DBX 
				(
					SELECT DISTINCT
						*
					FROM
						PKUB.DFXX_BR_DFR_REQ
					WHERE
						LC_DFR_TYP = 'XX'
						AND DAYS(LD_DFR_REQ_END) < DAYS(CURRENT_DATE)

					FOR READ ONLY WITH UR
				)
	;

	DISCONNECT FROM DBX;
QUIT;

ENDRSUBMIT;

DATA CURRENT; SET LEGEND.CURRENT; RUN;
DATA PAST; SET LEGEND.PAST; RUN;

PROC EXPORT DATA = WORK.CURRENT 
            OUTFILE = "T:\NH XXXX.xlsx" 
            DBMS = EXCEL
			REPLACE;
     SHEET="Current"; 
RUN;

PROC EXPORT DATA = WORK.PAST 
            OUTFILE = "T:\NH XXXX.xlsx" 
            DBMS = EXCEL
			REPLACE;
     SHEET="Past"; 
RUN;
