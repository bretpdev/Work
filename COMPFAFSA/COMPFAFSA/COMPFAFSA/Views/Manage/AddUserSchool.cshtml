@model COMPFAFSA.Models.UserSchool

@{
    ViewBag.Title = "AddUserSchool";
}

<body>
    <div class="body-content-margins">
        <h2>Assign user to school</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)

                <div class="form-group">
                    @Html.LabelFor(model => model.School, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.School, (IEnumerable<SelectListItem>)ViewBag.Schools, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.School, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List of Schools", "ManageUserSchools", new { id = Model.UserId })
        </div>
    </div>
</body>