@model IEnumerable<COMPFAFSA.Models.UserSchool>

@{
    ViewBag.Title = "ManageUserSchools";
}

<body>
    <div class="body-content-margins">
        <h2>Manage user's assigned schools</h2><br />

        <p>
            @Html.ActionLink("Add School", "AddUserSchool", new { userId = ViewBag.UserId })
        </p>
        <div>
            @Html.ActionLink("Back to Manage Users", "ManageUsers")
        </div><br /><br />

        <h3><strong>User: </strong>@ViewBag.UserName</h3><br />


        <table class="table">
            <tr>
                <th>
                    <strong>@Html.DisplayNameFor(model => model.School)</strong>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.School)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteUserSchool", new { userId = item.UserId, schoolId = item.SchoolId, school = item.School })
                    </td>
                </tr>
            }
        </table>
    </div>
</body>


