<UserControl x:Class="OPSWebEntry.OPSStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel MinWidth="250">
        <Label Name="StatusLabel" HorizontalContentAlignment="Center" FontSize="18">Not Running</Label>
        <Button Name="StartStopButton" Margin="0,0,0,4" Width="100" FontWeight="Bold" Click="StartStopButton_Click">Start</Button>
    </StackPanel>
</UserControl>
