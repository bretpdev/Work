PROC SORT DATA=PLUS;
BY AD_PRC;
RUN;

DATA PLUS_CURR PLUS_HIST;
SET PLUS;
IF DAYS_CNT = 1 THEN OUTPUT PLUS_CURR;
ELSE OUTPUT PLUS_HIST;
RUN;

