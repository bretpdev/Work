PROC SQL;
CONNECT TO DB2 (DATABASE=DLGSUTWH);
CREATE TABLE PLUS AS
SELECT *
FROM CONNECTION TO DB2 (

SELECT 
	DAYS(A.AD_PRC) - DAYS(CURRENT DATE) AS DAYS_CNT
	,D.DF_SPE_ACC_ID AS B_ACCN
	,E.DF_SPE_ACC_ID AS E_ACCN
	,A.AA_GTE_LON_AMT AS AMT
	,A.AD_PRC
	,C.AC_LON_STA_TYP 

FROM	OLWHRM1.GA10_LON_APP A
INNER JOIN OLWHRM1.GA01_APP B
	ON A.AF_APL_ID = B.AF_APL_ID
INNER JOIN OLWHRM1.GA14_LON_STA C
	ON A.AF_APL_ID = C.AF_APL_ID
	AND A.AF_APL_ID_SFX = C.AF_APL_ID_SFX
INNER JOIN OLWHRM1.PD01_PDM_INF D
	ON B.DF_PRS_ID_BR = D.DF_PRS_ID
INNER JOIN OLWHRM1.PD01_PDM_INF E
	ON B.DF_PRS_ID_EDS = E.DF_PRS_ID
WHERE A.AC_LON_TYP IN ('PL','GB')
AND C.AF_CRT_DTS_GA14 IN (SELECT MAX(ZZ.AF_CRT_DTS_GA14) FROM OLWHRM1.GA14_LON_STA ZZ WHERE ZZ.AF_APL_ID = C.AF_APL_ID AND ZZ.AF_APL_ID_SFX = C.AF_APL_ID_SFX )
AND A.AC_PRC_STA = 'A'
AND A.AD_PRC >= '09/01/2006'
AND B.AC_EDS_TYP = 'E'
AND C.AC_LON_STA_TYP <> 'CP'


FOR READ ONLY WITH UR

);
DISCONNECT FROM DB2;

