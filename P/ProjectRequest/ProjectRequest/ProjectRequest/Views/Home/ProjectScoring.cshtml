@model ProjectRequest.Models.ProjectScoring

@{
    ViewBag.Title = "Project Scoring";
}

<h2>@Html.LabelFor(model => model.ScoringDepartment)</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Html.DisplayFor(model => model.ScoringDepartment)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProjectId)
        @Html.HiddenFor(model => model.ScoreTypeId)
        @Html.HiddenFor(model => model.ScoreId)
        @Html.HiddenFor(model => model.ScoringDepartment)
        <div class="form-group">
            @Html.LabelFor(model => model.Score, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.EditorFor(model => model.Score, new {htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Score, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-11">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ScoreOverview", new { id = Model.ProjectId })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
