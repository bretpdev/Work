                <Image Source="..\Resources\SystemAccess.gif" Visibility="Visible" />
            </Button>
            <Button Background="Transparent" Foreground="White" Height="50" Name="btnNeedHelp" Width="50" Margin="5" Click="btnNeedHelp_Click" Visibility="Collapsed" ToolTip="Need Help?">
