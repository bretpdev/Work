<UserControl x:Class="ACDC.ApplicationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d">
    <Button Name="AppButton" Background="Transparent" Foreground="White" Height="50" Width="50" Margin="5" 
            VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" Click="AppButton_Click" MouseDoubleClick="AppButton_DoubleClick" Focusable="False">
        <Button.BitmapEffect>
            <DropShadowBitmapEffect />
        </Button.BitmapEffect>
        <Grid Name="ButtonGrid">
            <Image Name="BackgroundImage" RenderTransformOrigin="1,1">
                <Image.Effect>
                    <BlurEffect Radius="10" />
                </Image.Effect>
            </Image>
            <Label Name="LoadingLabel" Foreground="White" FontSize="9" VerticalAlignment="Center" Visibility="Hidden">Loading</Label>
        </Grid>
    </Button>
</UserControl>
